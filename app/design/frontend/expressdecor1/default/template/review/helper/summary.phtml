<?php if ($this->getReviewsCount()): ?>
<span itemprop="review" itemscope itemtype="http://data-vocabulary.org/Review-aggregate">
    <div class="ratings">

        <?php if ($this->getRatingSummary()):?>

            <div class="rating-box">

                <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
				<span style="display:none;" itemprop="rating"><?php echo $this->getRatingSummary()/20; ?></span>
            </div>

        <?php endif;?>

        <p class="rating-links">
			<span  style="display:none;" itemprop="count"><?php echo  $this->getReviewsCount() ?></span>
            <a rel="nofollow" href="#" onclick="show_review();"><?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?></a>

            <span class="separator">|</span>

            <a rel="nofollow" href="<?php echo $this->getReviewsUrl() ?>#review-form"><?php echo $this->__('Write a Review') ?></a>

        </p>

    </div>
     </span>
  <script type="text/javascript">
  function show_review() {

  	simulate(document.getElementById("reviews"), "click");
  	$('reviews').click();

  }
  </script>
<?php elseif ($this->getDisplayIfEmpty()): ?>
 <div class="ratings">
    <p class="no-rating"><a rel="nofollow" href="<?php echo $this->getReviewsUrl() ?>#review-form"><?php echo $this->__('Write a review for this product') ?></a></p>
 </div>
<?php endif; ?>

